  <body>
    <header>
      <section class="navigation ui secondary menu">
        <nav>
          <div class="nav-group">
            <div class="logo-container"><img
                src="./images/projectify_logo.png"
                alt="Projectify"
                class="projectifyIcon"
              /></div>
            <a href="/" class="home item active">Home</a>
            <a href="/signup" class="signup item">Sign up</a>
            <a href="/products" class="team item">Product</a>
            <a href="/team" class="product item">Team</a>
            {{#if loggedIn}}
              <a id="logout" href="" class="logout item">Log Out</a>
            {{else}}
              <a href="/login" class="item">Log In</a>
            {{/if}}
          </div>
          <div class="nav-group">
            {{#if loggedIn}}
              <a href="/yourDetails" class="yourDetails item">Your Details</a>
              <a href="/dashboard" class="dashboard item">Dashboard</a>
              <a href="/projects" class="projects item">Projects</a>
              <a href="/invoices" class="invoices item">Invoices</a>
            {{/if}}
          </div>
        </nav>
      </section>
    </header>

    <main class="container">
      <!-- Render the sub layout -->
      {{{body}}}
    </main>

    <footer>
      <div id="footer-nav-container">
        <div>
          <a class="product" href="/login">Login</a>
          <a class="privacy" href="/privacy">Privacy Policy</a>
          <a class="terms" href="/faq">FAQ</a>
          <br />
